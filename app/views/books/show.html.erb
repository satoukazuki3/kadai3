<%= render 'books/user_info', book: @book , user: @user%>

<div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
    <table class="table">
   <tbody>

   <tr>

    <td>
       <%= link_to user_path(@books.user.id) do %>
       <%= image_tag @books.user.get_profile_image(100,100) %>
       <br>
  　    <%= @books.user.name %>
  　    <% end %>
  　 </td>
  　<td><%= link_to book_path(@books.id) do %>
  　<%= @books.title %>
  　<% end %></td>
   <td><%= @books.body %></td>
   
   <td><% if @books.user == current_user %>
       <%= link_to "Edit",edit_book_path(@books.id), class: "btn btn-sm btn-success" %>
       <% end %>
   </td>
   <td><% if @books.user == current_user %>
       <%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
       <% end %>
   </td>
   </tr>
  </tbody>
  </table>

    </div>